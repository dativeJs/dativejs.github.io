{
    "compilerOptions": {
        "baseUrl": ".",
        // "outDir": "/dist",
        "sourceMap": false,
        "target": "es2017",
        "useDefineForClassFields": false,
        "module": "EsNext",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": false,
        "noUnusedLocals": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["ESNext","DOM"],
        //"types": ["node"],
        "rootDir": ".",
        "paths": {
            "dativejs":["packages/dative/src"]
        }
    },
    "include": [
        "packages/global.d.ts",
        "packages/dative/src",
        "res/"
    ]
}